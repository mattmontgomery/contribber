<%= form_for(@assignment) do |f| %>
  <% if @assignment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@assignment.errors.count, "error") %> prohibited this assignment from being saved:</h2>

      <ul>
      <% @assignment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row row-fluid">
    <div class="col-md-6">
      <div class="field form-group ">
        <%= f.label :title, class: 'form-label' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="field form-group">
        <%= f.label :description, class: 'form-label' %><br>
        <%= f.text_area :description, class: 'form-control' %>
      </div>
      <div class="field form-group">
        <%= f.label :series, class: 'form-label' %> (what story stream?)<br>
        <%= f.text_field :series, class: 'form-control' %>
      </div>
      <div class="field form-group">
        <%= f.label :label, class: 'form-label' %> (e.g., preview, report, ratings)<br>
        <%= f.text_field :label, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="field form-group">
        <%= f.label :publication_date, class: 'form-label' %><br>
        <%= f.date_select :publication_date, class: 'form-control' %>
      </div>
      <div class="field form-group">
        <%= f.label :complexity, class: 'form-label' %> (1-10)
        <%= f.number_field :complexity, class: 'form-control' %>
      </div>
      <div class="field form-group">
        <label>Writers</label> (comma-separated)
        <%= f.text_field :initials, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.submit 'Submit', class:'btn btn-primary' %>
  </div>
<% end %>
